proc LogBob (reps, verbose, log, done) =
    log?(bs) .
    log?(vs) .
    out!if verbose then ["Bob saw "; show (length bs);
                                    " quantum pairs: "; show (zip bs vs); "\n"] else [] fi .
    log?(h0) . log?(bAs)  .
    out!if verbose then ["Bob received "; show (length bAs);
                                    " tagged bases "; show (h0,bAs); "\n"] else [] fi .
    log?(h1) . log?(bBs)  .
    out!if verbose then ["Bob sent "; show (length bBs);
                                    " tagged bases "; show (h1,bBs); "\n"] else [] fi .
    log?(rvs) .
    out!if verbose then ["Bob reconciled "; show rvs; "\n"] else [] fi .
    log?(h2) . log?(mask) .
    out!if verbose then ["Bob sent tagged check-bit mask "; show (h2,mask); "\n"] else [] fi .
    log?(h3) . log?(cs)  .
    out!if verbose then ["Bob sent tagged check bits "; show (h3,cs); "\n"] else [] fi .
    log?(again) .
    if bit2bool (hd again) then
      out!["Bob goes round again\n"] .
      LogBob (reps+1, verbose, log, done)
    else
      log?(h4) . log?(encrypted) .
      out!if verbose then ["Bob receives tagged encrypted "; show (h4,encrypted); "\n"] else [] fi . 
      log?(code) .
      out!if verbose then ["Bob's code is "; show code; "\n"] else [] fi .
      log?(M) .
      out!if verbose then ["Bob decodes message "; show M; "\n"] else [] fi .
      log?(intfseen) .
      (let intfseen = bit2bool (hd intfseen))
      out![if intfseen then "Bob detected classical interference\n" else "" fi] .
      log?(hks') .
      done!length cs, M, intfseen, hks', reps .
      _0
    fi
