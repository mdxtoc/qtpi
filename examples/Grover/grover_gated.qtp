fun compose (f : 'b -> 'a) (g : 'c -> 'b) (v : 'c) : 'a = f (g v)

fun semicolon (g : 'c -> 'b) (f : 'b -> 'a) : ('c -> 'a) = compose f g

fun read_min_int m s
  = k where k = if j>=m then j 
                else semicolon (Î» _ . print_strings ["pardon? at least "; show m; "\n"])
                               (Î» _ . read_min_int m s)
                               ()
      where j = read_num s

