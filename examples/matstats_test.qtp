fun compose (f : 'b -> 'a) (g : 'c -> 'b) (v : 'c) : 'a = f (g v)

fun semicolon (g : 'c -> 'b) (f : 'b -> 'a) : ('c -> 'a) = compose f g

fun read_min_int m s
  = k where k = if j>=m then j 
                else semicolon (ﾎｻ _ . print_strings ["pardon? at least "; show m; "\n"])
                               (ﾎｻ _ . read_min_int m s)
                               ()
      where j = read_num s

fun groverG n = engate ((sx_1+sx_1)*((|+>竓冷蒲n)*(<+|竓冷蒲n))-(degate I竓冷蒲n))

   groverU bs = engate (tabulate_m (2**n) (2**n) tf)
                 where n = length bs
                 where tf i j = if i<>j      then  sx_0 else
                                if i=address then -sx_1 else 
                                                   sx_1
                 where address = bits2num (rev bs) (* big-endian *)  

fun showM name M =
    print_strings [name; " "; " -> "; show (statistics_m M); "\n"; show M; "\n"]

  showG name G = showM name (degate G)

let RX = Rx (撈/8)
let RZ = Rz (撈/8)

proc 
  System () =
    . (let _ = showG "I" I)
    . (let _ = showG "CNot" CNot)
    . (let _ = showG "CZ" CZ)
    . (let _ = showG "CZ竓佑Z" (CZ竓佑Z))
    . (let _ = showG "CZ竓佑Z竓佑Z" (CZ竓佑Z竓佑Z))
    . (let _ = showG "RX竓悠竓由X竓悠竓由X竓悠" (RX竓悠竓由X竓悠竓由X竓悠))
    . (let _ = showG "F" F)
    . (let _ = showG "F竓悠" (F竓悠))
    . (let _ = showG "I竓友" (I竓友))
    . (let _ = showG "H" (H))
    . (let _ = showG "H竓幽" (H竓幽))
    . (let _ = showG "H竓幽竓幽" (H竓幽竓幽))
    . (let _ = showG "H竓幽竓幽竓幽" (H竓幽竓幽竓幽))
    . (let _ = showG "RX竓由X" (RX竓由X))
    . (let _ = showG "RX竓由X竓由X" (RX竓由X竓由X))
    . (let _ = showG "RX竓由X竓由X竓由X" (RX竓由X竓由X竓由X))
    . (let _ = showG "RZ竓由Z" (RZ竓由Z))
    . (let _ = showG "RZ竓由Z竓由Z" (RZ竓由Z竓由Z))
    . (let _ = showG "RZ竓由Z竓由Z竓由Z" (RZ竓由Z竓由Z竓由Z))

    . (let n = read_min_int 1 "number of Grover bits")
    . (let G = groverG n)
    . (let bs = randbits n)
    . (let U = groverU bs)
    . (let _ = showG (concat ["groverG "; show n]) G)
    . (let _ = showG (concat ["groverU "; show bs]) U)

    . _0
